<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@color/cardview_dark_background"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/binaryResultText"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white"
        android:text=""
        android:textSize="30sp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />
    <TextView
        android:id="@+id/hexadecimalResultText"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white"
        android:text=""
        android:textSize="30sp"
        android:gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />
    <TextView
        android:id="@+id/decimalResultText"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white"
        android:text=""
        android:textSize="30sp"
        android:gravity="center"

        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />

    <TextView
        android:id="@+id/expressionText"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white"
        android:text=""
        android:textSize="30sp"
        android:gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:columnCount="4"
        android:orientation="horizontal"
        android:rowCount="5"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/clearButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C"
            style="@style/CalculatorButton"
            android:onClick="OnClearClick"
            />

        <Button
            android:id="@+id/percentButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            style="@style/CalculatorButton"
            android:onClick="OnPercentClick"
            />

        <Button
            android:id="@+id/divideButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            style="@style/CalculatorButton"
            android:onClick="OnOperatorClick"
            />

        <Button
            android:id="@+id/multiplyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            style="@style/CalculatorButton"
            android:onClick="OnOperatorClick"
            />

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            style="@style/CalculatorButton"
            android:onClick="OnDigitClick"
            />

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            style="@style/CalculatorButton"
            android:onClick="OnDigitClick"
            />

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            style="@style/CalculatorButton"
            android:onClick="OnDigitClick"
            />

        <Button
            android:id="@+id/plusButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            style="@style/CalculatorButton"
            android:onClick="OnOperatorClick"
            />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            style="@style/CalculatorButton"
            android:onClick="OnDigitClick"
            />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            style="@style/CalculatorButton"
            android:onClick="OnDigitClick"
            />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            style="@style/CalculatorButton"
            android:onClick="OnDigitClick"
            />

        <Button
            android:id="@+id/minusButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            style="@style/CalculatorButton"
            android:onClick="OnOperatorClick"
            />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            style="@style/CalculatorButton"
            android:onClick="OnDigitClick"
            />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            style="@style/CalculatorButton"
            android:onClick="OnDigitClick"
            />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            style="@style/CalculatorButton"
            android:onClick="OnDigitClick"
            />

        <Button
            android:id="@+id/decimalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            style="@style/CalculatorButton"
            android:onClick="OnDigitClick"
            />

        <Button
            android:id="@+id/button0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            style="@style/CalculatorButton"
            android:onClick="OnDigitClick"
            />

        <Button
            android:id="@+id/equalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            style="@style/CalculatorButton"
            android:onClick="OnEqualClick"
            />

        <Button
            android:id="@+id/backspaceButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ”™"
            style="@style/CalculatorButton"
            android:onClick="onBackspaceClick"
            />

    </GridLayout>

</LinearLayout>